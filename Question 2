#include<iostream>

using namespace std;

int main(){
    cout<<"The range of char is from: "<<CHAR_MIN<<" to "<<CHAR_MAX <<"\n";
    cout<<"The range of short int is from: "<<SHRT_MIN<<" to "<<SHRT_MAX <<"\n";
    cout<<"The range of long int is from: "<<LONG_MIN<<" to "<<LONG_MAX <<"\n";
    cout<<"The range of double is from: "<<__DBL_MAX__<<" to "<<__DBL_MIN__ <<"\n";

    return 0;

}
